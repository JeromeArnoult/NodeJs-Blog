<div class="author">
    <h1 class="author-heading">Hi, I'm Jérôme.</h1>
    <p class="author-body">Frenchie's owner.</p>
</div>
<div class="container-img">
    <img src="/img/chien.jpeg" alt="Cut french bulldog" class="img-dogs">
</div>
<section class="articles">
    <h2 class="articles-heading">Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article-list-date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>


    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage  %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
    
</section>